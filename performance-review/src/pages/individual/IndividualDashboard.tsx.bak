        onSubmit={createTask}
        goals={goals.filter(goal => goal.status === 'in_progress' || goal.status === 'not_started')}
      />

      {/* Edit Task Modal */}
      <EditTaskModal
        isOpen={showEditTaskModal}
        onClose={() => {
          setShowEditTaskModal(false);
          setSelectedTask(null);
        }}
        onSubmit={(taskData) => {
