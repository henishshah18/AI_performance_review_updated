      <GoalDetailsModal
        isOpen={showGoalDetailsModal}
        onClose={() => {
          setShowGoalDetailsModal(false);
          setSelectedGoal(null);
        }}
        goal={selectedGoal}
        tasks={tasks.filter(task => selectedGoal ? task.goalId === selectedGoal.id : false)}
      />
    </div>
  );
}

